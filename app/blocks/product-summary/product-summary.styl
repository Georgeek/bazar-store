.product-summary
  &__headline
    margin 60px 0 50px

  &__content
    grid-template-columns 2fr repeat(2, 320px)

  &__gallery
    position relative

  &__image-container
    max-width: 560px
    max-height: 420px
    overflow hidden
    img
      width: 100%
      height: auto

.product-title
  &__text-container
    max-width: 100%

  &__toolbar
    position relative
    margin-top 10px
    color $grey
  &__description
    position relative
    font-size: 13px
  &__features
    position absolute
    top 0
    right 0

  &__item-label
    margin-right 35px

.title
  line-height: 1.3

  &_bold_yes
    font-weight: 700

  &_size_40
    font-size 40px

  &__text
    margin-right 10px
