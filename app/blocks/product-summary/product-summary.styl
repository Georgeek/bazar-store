.product-summary
  &__headline
    margin 60px 0 50px

  &__content
    grid-template-columns 2fr repeat(2, 320px)

  &__gallery
    position relative

  &__image-container
    max-width: 560px
    max-height: 420px
    overflow hidden
    img
      width: 100%
      height: auto

.product-title
  &__text-container
    max-width: 100%

  &__toolbar
    position relative
    margin-top 10px
    color $grey
  &__description
    position relative
    font-size: 13px
  &__features
    position absolute
    top 0
    right 0

  &__item-label
    margin-right 35px

.title
  line-height: 1.3

  &_bold_yes
    font-weight: 700

  &_size_40
    font-size 40px

  &__text
    margin-right 10px

.product-content-block
  &__price
    position relative
    font-size 40px
    color $green_text
    background-color $grey_light
    padding 16px 0
    width 100%
    &:before
      content ''
      position absolute
      left 0
      width 0
      height 0
      border-top 56px solid transparent
      border-bottom 56px solid transparent
      border-right 56px solid pink

