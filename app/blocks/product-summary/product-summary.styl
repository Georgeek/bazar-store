.product-summary
  &__headline
    margin 60px 0 50px

  &__content
    grid-template-columns 2fr repeat(2, 320px)

  &__gallery
    position relative

  &__image-container
    overflow hidden
    max-width 560px
    max-height 420px
    img
      width 100%
      height auto

.product-title
  &__text-container
    max-width 100%

  &__toolbar
    position relative
    margin-top 10px
    color $grey
  &__description
    position relative
    font-size 13px
  &__features
    position absolute
    top 0
    right 0

  &__item-label
    margin-right 35px

.title
  line-height 1.3

  &_bold_yes
    font-weight 700

  &_size_40
    font-size 40px

  &__text
    margin-right 10px

.product-content-block
  &__price
    position relative
    padding 16px 0
    width 100%
    font-size 30px
    line-height 1.2
    color $green_text
    background-color $grey_light
    &:before
      position absolute
      top 0
      left -20px
      width 0
      height 0
      content ''
      border-top 34px solid transparent
      border-right 20px solid $grey_light
      border-bottom 34px solid transparent

  &__content
    margin-top 27px

  &__span
    margin-right 8px

  a
    color $green_text

.product-details
  display flex
  flex-direction column
  &__key
    margin-bottom 7px
    font-size 13px
    color $grey
  &__value
    font-size 16px
    color $black

.product-social
  &__links
    margin-top 47px
    display flex
    justify-content flex-end
  &__item
    margin-right 27px
    display flex
    flex-direction row
    align-items center
    &:last-child
      margin-right 0

.product-description
  &__layout
    margin 35px 0
  &__grid
    grid-template-columns repeat(4, 1fr)
    grid-template-rows auto auto
    grid-row-gap 23px
  &__description
    font-size 16px
    line-height 1.375
  &__content
    position relative

.col-2
  grid-column 1 / 3
.row-2
  grid-row 2 / 3

.product-location
  &__map
    margin-top 40px
  #google-map
    height 250px
    width 100%
    background-color pink

.product-relatives
  &__wrap
    margin-top 60px
  &__items
    margin-top 45px
    grid-template-columns repeat(4, 320px)
  &__image-container
    position relative
    overflow hidden
    height 180px

    a:before
      content ''
      position absolute
      left 0
      top 0
      display block
      width 100%
      height 100%
      background-color #fefefe
      opacity 0
      z-index 2
      transition all

  &__picture
    position relative
    width 100%
    height 100%
    transform scale(1, 1)
    transition all .4s ease 0s
    background url('http://kvant.space/sites/default/files/yupiter3_0.jpg')
    background-position 50% 50%
    background-repeat no-repeat
    background-size cover

  &__title
    margin 19px 0 16px
    font-size 18px
    line-height 1.2
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

  &__footer
    display flex
    flex-direction row
    justify-content space-between

  &__price
    font-size 20px
    font-weight 500
    color $green_text
    line-height 1.2
