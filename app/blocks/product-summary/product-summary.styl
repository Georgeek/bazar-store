.product-summary
  &__headline
    margin 60px 0 50px

  &__content
    grid-template-columns 2fr repeat(2, 320px)

  &__gallery
    position relative

  &__image-container
    max-width: 560px
    max-height: 420px
    overflow hidden
    img
      width: 100%
      height: auto

.product-title
  &__text-container
    max-width: 100%

  &__toolbar
    position relative
    margin-top 10px
    color $grey
  &__description
    position relative
    font-size: 13px
  &__features
    position absolute
    top 0
    right 0

  &__item-label
    margin-right 35px

.title
  line-height: 1.3

  &_bold_yes
    font-weight: 700

  &_size_40
    font-size 40px

  &__text
    margin-right 10px

.product-content-block
  &__price
    position relative
    font-size 30px
    color $green_text
    background-color $grey_light
    padding 16px 0
    width 100%
    line-height 1.2
    &:before
      content ''
      position absolute
      top 0
      left -20px
      width 0
      height 0
      border-top 34px solid transparent
      border-bottom 34px solid transparent
      border-right 20px solid $grey_light

  &__content
    margin-top 27px

  &__span
    margin-right 8px

  a
    color $green_text

.product-details
  display flex
  flex-direction column
  &__key
    margin-bottom 7px
    color $grey
    font-size 13px
  &__value
    color $black
    font-size 16px

.product-social
  &__links
    margin-top 47px
    display flex
    justify-content flex-end
  &__item
    margin-right 27px
    &:last-child
      margin-right 0
