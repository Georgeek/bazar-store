.footer
  margin-top 75px
  &__nav
    grid-template-columns repeat(2, 2fr)

  &__menu
    display flex
    flex-direction row
    align-items center
    text-align left
  &__menu-item
    margin-right 36px
    padding-left 9px
    border-left 3px solid $orange
  &__social
    display flex
    flex-direction row
    justify-content flex-end
    text-align right
  &__button
    margin-right 25px
    &:last-child
      margin-right 0

  &__description
    margin-top 57px
    font-size 16px
    line-height 1.375
    color $grey
  &__about
    margin 35px 0 40px
    font-size: 13px
    line-height: 1.2
    color $grey
