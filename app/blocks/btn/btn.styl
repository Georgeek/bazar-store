.btn
  position relative
  display block
  text-align left
  border none
  border-radius 2px


  &--large
    padding-left 24px
    width 236px
    max-height 56px
    font-size 16px
    line-height 56px

  &--green
    // color $white
    background-color $green
  &--orange
    color $white
    background-color $orange

  &_vertical-middle
    vertical-align middle
    margin-left 8px

  &_text-white
    color $white
  &_text-orange
    color $orange

  &__like
    width 25px
    height 25px
