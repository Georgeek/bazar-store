.btn
  position relative
  display block
  text-align left
  border none
  border-radius 2px
  font-size 16px

  &--large
    padding 0 0 0 24px
    width 100%
    max-width 236px
    max-height 56px
    line-height 56px

  &--green
    background-color $green

  &_vertical-middle
    margin-left 8px
    vertical-align middle

  &_text-white
    color $white
  &_text-orange
    color $orange

  &__like
    width 25px
    height 25px
